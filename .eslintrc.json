{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "wdio"
    ],
    "rules": {
        "indent": ["error", 4],
        "class-methods-use-this": "off"
    },
    "extends": ["airbnb-base", "plugin:wdio/recommended"]
}